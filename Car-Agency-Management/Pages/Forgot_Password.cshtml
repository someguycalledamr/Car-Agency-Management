@page
@model Car_Agency_Management.Pages.Forgot_PasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="login-wrapper">
    <div class="login-left">
        <h1>Reset Your <span style="color:#0ca39d;">Password</span></h1>
        <p style="margin-bottom: 20px; color: #666; font-size: 14px;">Enter your email and choose a new password to regain access to your account.</p>
        
        <form method="post">
            <input type="hidden" asp-for="IsVerified" />
            
            @if (Model.ErrorMessage != null)
            {
                <p class="error" style="margin-bottom: 15px;">@Model.ErrorMessage</p>
            }
            
            <label>Email Address</label>
            <input type="email" asp-for="Email" placeholder="example@gmail.com" required readonly="@Model.IsVerified" />
            
            <label>Security Check: Last 4 digits of Phone Number</label>
            <input type="text" asp-for="PhoneLast4" placeholder="e.g. 1234" maxlength="4" pattern="\d{4}" title="Please enter exactly 4 digits" required readonly="@Model.IsVerified" />

            @if (Model.IsVerified)
            {
                <label>New Password</label>
                <div style="position: relative;">
                    <input type="password" asp-for="NewPassword" id="newPassword" placeholder="************" required style="padding-right: 40px;" />
                    <i class="fa-solid fa-eye" id="toggleNewPassword" style="position: absolute; right: 10px; top: 38%; transform: translateY(-50%); cursor: pointer; color: #888;"></i>
                </div>
                
                <label>Confirm New Password</label>
                <div style="position: relative;">
                    <input type="password" asp-for="ConfirmPassword" id="confirmPassword" placeholder="************" required style="padding-right: 40px;" />
                    <i class="fa-solid fa-eye" id="toggleConfirmPassword" style="position: absolute; right: 10px; top: 38%; transform: translateY(-50%); cursor: pointer; color: #888;"></i>
                </div>

                <script>
                    // Toggle for New Password
                    const toggleNewPass = document.querySelector('#toggleNewPassword');
                    const newPass = document.querySelector('#newPassword');

                    toggleNewPass.addEventListener('click', function (e) {
                        const type = newPass.getAttribute('type') === 'password' ? 'text' : 'password';
                        newPass.setAttribute('type', type);
                        this.classList.toggle('fa-eye-slash');
                    });

                    // Toggle for Confirm Password
                    const toggleConfirmPass = document.querySelector('#toggleConfirmPassword');
                    const confirmPass = document.querySelector('#confirmPassword');

                    toggleConfirmPass.addEventListener('click', function (e) {
                        const type = confirmPass.getAttribute('type') === 'password' ? 'text' : 'password';
                        confirmPass.setAttribute('type', type);
                        this.classList.toggle('fa-eye-slash');
                    });
                </script>
            }

            <button type="submit" class="btn-login" style="margin-top: 30px; background: @(Model.IsVerified ? "linear-gradient(to right, #27ae60, #1e8449)" : "linear-gradient(to right, #0ca39d, #004f77)");">
                @(Model.IsVerified ? "Confirm New Password" : "Verify Information")
            </button>
            
            @if (Model.IsVerified)
            {
                <p style="text-align: center; margin-top: 10px; font-size: 14px;">
                    <a href="/Forgot_Password" style="color: #888; text-decoration: none;">Wrong email or phone? Go back</a>
                </p>
            }
            
            @if (Model.ErrorMessage != null)
            {
                <p class="error">@Model.ErrorMessage</p>
            }
            
            @if (Model.IsSuccess)
            {
                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        Swal.fire({
                            title: 'Success!',
                            text: 'Your password has been reset successfully.',
                            icon: 'success',
                            confirmButtonColor: '#0ca39d',
                            confirmButtonText: 'Go to Login'
                        }).then((result) => {
                            window.location.href = '/Login';
                        });
                    });
                </script>
            }
            
            @if (!Model.IsSuccess)
            {
                <p class="signup-link">Remembered your password? <a href="/Login">Login here</a></p>
            }
        </form>
    </div>
    <div class="login-right">
        <img src="~/images/login-car.jpg" class="car-image" />
    </div>
</div>

<div class="floating-shape shape-1"></div>
<div class="floating-shape shape-2"></div>
<div class="floating-shape shape-3"></div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLMDlT+4yT2sRjP60K5Fv8P9e8hTz8pX/jI/j1xG7vK706r5q9m5L5g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    /* Reuse Login styles */
    body {
        background: linear-gradient(135deg, rgba(6, 182, 212, 0.03) 0%, rgba(14, 165, 233, 0.05) 100%);
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        min-height: 100vh;
        position: relative;
        overflow-y: auto;
    }

    body::before, body::after {
        content: '';
        position: fixed;
        border-radius: 50%;
        pointer-events: none;
        z-index: 0;
    }

    body::before {
        width: 600px; height: 600px;
        background: radial-gradient(circle, rgba(6, 182, 212, 0.1), transparent 70%);
        top: -300px; right: -300px;
        animation: floatCircle1 20s ease-in-out infinite;
    }

    body::after {
        width: 500px; height: 500px;
        background: radial-gradient(circle, rgba(30, 41, 59, 0.08), transparent 70%);
        bottom: -250px; left: -250px;
        animation: floatCircle2 18s ease-in-out infinite;
    }

    .floating-shape {
        position: fixed; border-radius: 50%; opacity: 0.1;
        pointer-events: none; animation: float 20s infinite ease-in-out;
        z-index: 0;
    }

    .shape-1 { width: 300px; height: 300px; background: #06b6d4; top: 10%; left: 5%; }
    .shape-2 { width: 200px; height: 200px; background: #1e293b; top: 60%; right: 10%; animation-delay: 3s; }
    .shape-3 { width: 150px; height: 150px; background: #06b6d4; bottom: 20%; left: 15%; animation-delay: 6s; }

    @@keyframes float {
        0%, 100% { transform: translateY(0) translateX(0) rotate(0deg); }
        33% { transform: translateY(-30px) translateX(20px) rotate(120deg); }
        66% { transform: translateY(20px) translateX(-30px) rotate(240deg); }
    }

    .login-wrapper {
        width: 90%; max-width: 1100px;
        margin: 40px auto; border-radius: 20px;
        display: flex; overflow: hidden;
        box-shadow: 0px 20px 60px rgba(0,0,0,0.2);
        position: relative; z-index: 1;
        animation: floatCard 6s ease-in-out infinite;
    }

    @@keyframes floatCard {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }

    .login-left {
        flex: 1; padding: 50px;
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px 0 0 20px;
        backdrop-filter: blur(10px);
        transition: transform 0.3s ease;
        overflow-y: auto;
    }

    .login-left:hover { transform: scale(1.02); }

    .login-left h1 { font-size: 35px; font-weight: 700; margin-bottom: 10px; color: #333; }

    label { font-size: 15px; font-weight: 600; margin-top: 10px; display: block; color: #333; }

    input {
        width: 100%; padding: 12px; border-radius: 8px;
        outline: none; border: 1px solid #aaa;
        margin-top: 5px; margin-bottom: 10px;
        font-size: 15px; background: #fff;
        transition: all 0.3s ease;
        box-sizing: border-box;
    }

    input:focus {
        border-color: #0ca39d;
        box-shadow: 0 0 0 3px rgba(12, 163, 157, 0.1);
        transform: translateY(-2px);
    }

    .btn-login {
        width: 100%; padding: 14px;
        background: linear-gradient(to right, #0ca39d, #004f77);
        border: none; color: white;
        font-size: 16px; font-weight: 600;
        border-radius: 8px; cursor: pointer;
        margin-top: 20px; transition: all 0.3s ease;
        position: relative; overflow: hidden;
    }

    .btn-login:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(12, 163, 157, 0.4);
    }

    .error { color: #e74c3c; margin-top: 15px; font-weight: bold; text-align: center; }

    .signup-link { text-align: center; margin-top: 15px; font-size: 14px; color: #333; }
    .signup-link a { color: #0ca39d; text-decoration: none; font-weight: 600; }
    .signup-link a:hover { text-decoration: underline; }

    .login-right {
        flex: 1; display: flex; justify-content: center;
        align-items: center; padding: 20px; background: #f5f5f5;
    }

    .car-image {
        width: 95%; border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.4);
        transition: transform 0.5s ease;
    }

    .car-image:hover { transform: scale(1.05) rotate(1deg); }

    @@keyframes floatCircle1 { 0%, 100% { transform: translate(0, 0) scale(1); } 50% { transform: translate(-50px, 300px) scale(0.9); } }
    @@keyframes floatCircle2 { 0%, 100% { transform: translate(0, 0) scale(1); } 50% { transform: translate(100px, -50px) scale(0.85); } }

    /* For mobile responsiveness */
    @@media (max-width: 768px) {
        .login-wrapper { flex-direction: column; height: auto; }
        .login-left { border-radius: 20px 20px 0 0; padding: 30px; }
        .login-right { display: none; }
    }
</style>
