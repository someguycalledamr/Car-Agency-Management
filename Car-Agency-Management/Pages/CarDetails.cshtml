@page "{carId?}"
@model Car_Agency_Management.Pages.CarDetailsModel
@{
    ViewData["Title"] = Model.CarName ?? "Car Details";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - AutoLux.Drive</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, rgba(6, 182, 212, 0.03) 0%, rgba(14, 165, 233, 0.05) 100%);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
            padding-top: 80px;
        }

        body::before,
        body::after {
            content: '';
            position: fixed;
            border-radius: 50%;
            pointer-events: none;
            z-index: -1;
        }

        body::before {
            width: 600px;
            height: 600px;
            background: radial-gradient(circle, rgba(6, 182, 212, 0.1), transparent 70%);
            top: -300px;
            right: -300px;
            animation: floatCircle1 20s ease-in-out infinite;
        }

        body::after {
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(30, 41, 59, 0.08), transparent 70%);
            bottom: -250px;
            left: -250px;
            animation: floatCircle2 18s ease-in-out infinite;
        }

        .floating-shape {
            position: fixed;
            border-radius: 50%;
            opacity: 0.1;
            pointer-events: none;
            animation: float 20s infinite ease-in-out;
            z-index: -1;
        }

        .shape-1 {
            width: 300px;
            height: 300px;
            background: #06b6d4;
            top: 10%;
            left: 5%;
            animation-delay: 0s;
        }

        .shape-2 {
            width: 200px;
            height: 200px;
            background: #1e293b;
            top: 60%;
            right: 10%;
            animation-delay: 3s;
        }

        .shape-3 {
            width: 150px;
            height: 150px;
            background: #06b6d4;
            bottom: 20%;
            left: 15%;
            animation-delay: 6s;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0) translateX(0) rotate(0deg); }
            33% { transform: translateY(-30px) translateX(20px) rotate(120deg); }
            66% { transform: translateY(20px) translateX(-30px) rotate(240deg); }
        }

        @@keyframes floatCircle1 {
            0%, 100% { transform: translate(0,0) scale(1); }
            25% { transform: translate(-100px,150px) scale(1.1); }
            50% { transform: translate(-50px,300px) scale(0.9); }
            75% { transform: translate(50px,200px) scale(1.05); }
        }

        @@keyframes floatCircle2 {
            0%, 100% { transform: translate(0,0) scale(1); }
            25% { transform: translate(150px,-100px) scale(1.15); }
            50% { transform: translate(100px,-50px) scale(0.85); }
            75% { transform: translate(50px,-150px) scale(1.1); }
        }

        @@keyframes floatCard {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-8px); }
        }

        .car-details-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
            position: relative;
            z-index: 1;
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            color: #0066cc;
            font-weight: 600;
            font-size: 17px;
            text-decoration: none;
            margin: 20px 0;
            transition: all 0.3s;
        }

        .back-button:hover {
            color: #004999;
            transform: translateX(-8px);
        }

        .car-header {
            background: white;
            border-radius: 16px;
            padding: 35px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
            animation: floatCard 6s ease-in-out infinite;
        }

        .car-title {
            font-size: 36px;
            font-weight: 700;
            color: #212529;
            margin-bottom: 10px;
        }

        .car-subtitle {
            font-size: 19px;
            color: #6c757d;
            margin-bottom: 20px;
        }

        .price-badge {
            display: inline-block;
            background: linear-gradient(135deg, #0066cc, #0099ff);
            color: white;
            padding: 16px 32px;
            border-radius: 12px;
            font-size: 28px;
            font-weight: 700;
            box-shadow: 0 10px 25px rgba(0,102,204,0.3);
        }

        .content-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 35px;
            margin-bottom: 40px;
        }

        @@media (max-width: 992px) {
            .content-grid {
                grid-template-columns: 1fr;
            }
        }

        .image-section {
            background: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
            animation: floatCard 6s ease-in-out infinite;
        }

        .main-image {
            width: 100%;
            height: 420px;
            object-fit: contain;
            border-radius: 14px;
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            transition: transform 0.4s;
        }

        .main-image:hover {
            transform: scale(1.02);
        }

        .thumbnail-grid {
            display: grid;
            grid-template-columns: repeat(4,1fr);
            gap: 12px;
        }

        .thumbnail {
            width: 100%;
            height: 90px;
            object-fit: cover;
            border-radius: 12px;
            cursor: pointer;
            border: 3px solid transparent;
            transition: all 0.4s;
            box-shadow: 0 6px 16px rgba(0,0,0,0.15);
        }

        .thumbnail:hover,
        .thumbnail.active {
            border-color: #0066cc;
            transform: scale(1.1);
            box-shadow: 0 12px 25px rgba(0,102,204,0.3);
        }

        .section-title {
            font-size: 24px;
            font-weight: 600;
            color: #212529;
            margin-bottom: 25px;
            padding-bottom: 12px;
            border-bottom: 4px solid #0066cc;
            display: inline-block;
        }

        /* ——————————— ULTRA PREMIUM SPECIFICATIONS ——————————— */
        .specs-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
            gap: 20px;
            padding: 15px 0;
        }

        .spec-card {
            background: rgba(255, 255, 255, 0.92);
            backdrop-filter: blur(15px);
            border-radius: 24px;
            padding: 24px 20px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
            border: 1px solid rgba(6, 182, 212, 0.15);
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
        }

        .spec-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #0066cc, #0099ff);
            transform: scaleX(0);
            transition: transform 0.4s ease;
        }

        .spec-card:hover::before {
            transform: scaleX(1);
        }

        .spec-card:hover {
            transform: translateY(-12px) scale(1.03);
            box-shadow: 0 20px 50px rgba(0, 102, 204, 0.25);
            background: rgba(255, 255, 255, 0.98);
        }

        .spec-icon {
            width: 70px;
            height: 70px;
            margin: 0 auto 16px;
            background: linear-gradient(135deg, #0066cc, #0099ff);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            box-shadow: 0 8px 25px rgba(0, 102, 204, 0.4);
        }

        .spec-label {
            font-size: 13px;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 1.8px;
            font-weight: 700;
            margin-bottom: 8px;
        }

        .spec-value {
            font-size: 20px;
            font-weight: 800;
            color: #1e293b;
            letter-spacing: 0.5px;
        }

        @@media (max-width: 480px) {
            .specs-container {
                grid-template-columns: repeat(2, 1fr);
                gap: 16px;
            }
            .spec-card {
                padding: 20px 16px;
            }
            .spec-icon {
                width: 60px;
                height: 60px;
                font-size: 24px;
            }
        }

        /* ——————————— FEATURES ——————————— */
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 16px;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 14px;
            padding: 16px 20px;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 14px;
            backdrop-filter: blur(10px);
            box-shadow: 0 6px 18px rgba(0,0,0,0.08);
            transition: all 0.3s;
        }

        .feature-item:hover {
            transform: translateX(10px);
            background: rgba(0, 102, 204, 0.08);
        }

        .feature-icon {
            color: #0066cc;
            font-size: 20px;
        }

        .feature-text {
            font-size: 15px;
            color: #212529;
            font-weight: 500;
        }

        /* ——————————— PAYMENT SECTION ——————————— */
        .payment-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 25px;
            margin-bottom: 30px;
        }

        @@media (max-width: 768px) {
            .payment-grid,
            .action-buttons {
                grid-template-columns: 1fr;
            }
        }

        .payment-box {
            text-align: center;
            padding: 30px 20px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 18px;
            backdrop-filter: blur(12px);
            box-shadow: 0 8px 25px rgba(0, 102, 204, 0.15);
            transition: all 0.4s;
        }

        .payment-box:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 102, 204, 0.25);
        }

        .payment-label {
            font-size: 13px;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            margin-bottom: 12px;
        }

        .payment-value {
            font-size: 26px;
            font-weight: 700;
            color: #0066cc;
        }

        .action-buttons {
            display: grid;
            grid-template-columns: repeat(3,1fr);
            gap: 20px;
            margin-top: 10px;
        }

        .btn-purchase,
        .btn-rent,
        .btn-contact {
            padding: 20px;
            border-radius: 14px;
            font-size: 18px;
            font-weight: 600;
            transition: all 0.4s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            text-decoration: none;
        }

        .btn-purchase {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            border: none;
            box-shadow: 0 10px 30px rgba(40,167,69,0.3);
        }

        .btn-purchase:hover {
            transform: translateY(-6px);
            box-shadow: 0 20px 40px rgba(40,167,69,0.4);
        }

        .btn-rent {
            background: linear-gradient(135deg, #0066cc, #0099ff);
            color: white;
            border: none;
            box-shadow: 0 10px 30px rgba(0,102,204,0.3);
        }

        .btn-rent:hover {
            transform: translateY(-6px);
            box-shadow: 0 20px 40px rgba(0,102,204,0.4);
        }

        .btn-contact {
            background: white;
            color: #0066cc;
            border: 3px solid #0066cc;
        }

        .btn-contact:hover {
            background: #0066cc;
            color: white;
        }

        .description-section {
            background: white;
            border-radius: 16px;
            padding: 35px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
            animation: floatCard 6s ease-in-out infinite;
        }

        .description-text {
            font-size: 16px;
            line-height: 1.9;
            color: #495057;
            background: rgba(255,255,255,0.7);
            padding: 25px;
            border-radius: 14px;
            backdrop-filter: blur(8px);
        }

        .car-header,
        .image-section,
        .specs-section,
        .features-section,
        .payment-section,
        .description-section {
            animation: floatCard 6s ease-in-out infinite;
        }
    </style>
</head>
<body>

    <div class="floating-shape shape-1"></div>
    <div class="floating-shape shape-2"></div>
    <div class="floating-shape shape-3"></div>

    <div class="car-details-container">
        <a href="/Car-gallary" class="back-button">Back to Gallery</a>

        <div class="car-header">
            <h1 class="car-title">@Model.CarName</h1>
            <p class="car-subtitle">@Model.Year • @Model.Brand</p>
            <div class="price-badge">@($"{Model.Price:N0}") EGP</div>
        </div>

        <div class="content-grid">
            <div class="image-section">
                <img src="@Model.MainImage" alt="@Model.CarName" class="main-image" id="mainImage">
                <div class="thumbnail-grid">
                    @foreach (var img in Model.Images)
                    {
                            <img src="@img" alt="@Model.CarName" class="thumbnail" onclick="changeMainImage('@img')">
                    }
                </div>
            </div>

            <!-- ULTRA PREMIUM SPECIFICATIONS -->
            <div class="specs-section">
                <h2 class="section-title">Specifications</h2>
                <div class="specs-container">
                    <div class="spec-card">
                        <div class="spec-icon"><i class="fas fa-car"></i></div>
                        <div class="spec-label">Brand</div>
                        <div class="spec-value">@Model.Brand</div>
                    </div>
                    <div class="spec-card">
                        <div class="spec-icon"><i class="fas fa-calendar-alt"></i></div>
                        <div class="spec-label">Year</div>
                        <div class="spec-value">@Model.Year</div>
                    </div>
                    <div class="spec-card">
                        <div class="spec-icon"><i class="fas fa-cogs"></i></div>
                        <div class="spec-label">Transmission</div>
                        <div class="spec-value">@Model.Transmission</div>
                    </div>
                    <div class="spec-card">
                        <div class="spec-icon"><i class="fas fa-gas-pump"></i></div>
                        <div class="spec-label">Fuel Type</div>
                        <div class="spec-value">@Model.FuelType</div>
                    </div>
                    <div class="spec-card">
                        <div class="spec-icon"><i class="fas fa-tachometer-alt"></i></div>
                        <div class="spec-label">Engine</div>
                        <div class="spec-value">@Model.Engine</div>
                    </div>
                    <div class="spec-card">
                        <div class="spec-icon"><i class="fas fa-chair"></i></div>
                        <div class="spec-label">Seats</div>
                        <div class="spec-value">@Model.Seats</div>
                    </div>
                    <div class="spec-card">
                        <div class="spec-icon"><i class="fas fa-palette"></i></div>
                        <div class="spec-label">Color</div>
                        <div class="spec-value">@Model.Color</div>
                    </div>
                    <div class="spec-card">
                        <div class="spec-icon"><i class="fas fa-road"></i></div>
                        <div class="spec-label">Mileage</div>
                        <div class="spec-value">@Model.Mileage km</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="features-section">
            <h2 class="section-title">Features & Equipment</h2>
            <div class="features-grid">
                @foreach (var feature in Model.Features)
                {
                        <div class="feature-item">
                            <i class="fas fa-check-circle feature-icon"></i>
                            <span class="feature-text">@feature</span>
                        </div>
                }
            </div>
        </div>

        <div class="payment-section" style="margin-top: 40px;">
            <h2 class="section-title">Payment Options</h2>
            <div class="payment-grid">
                <div class="payment-box"><div class="payment-label">Starting Price</div><div class="payment-value">@($"{Model.Price:N0}") EGP</div></div>
                <div class="payment-box"><div class="payment-label">Min. Deposit (15%)</div><div class="payment-value">@($"{Model.MinDeposit:N0}") EGP</div></div>
                <div class="payment-box"><div class="payment-label">Monthly Installment</div><div class="payment-value">@($"{Model.MonthlyInstallment:N0}") EGP</div></div>
            </div>
            <div class="action-buttons">
                <button class="btn-purchase" onclick="alert('Purchase coming soon!')">Purchase Now</button>
                <a href="/rent?carId=@Model.CarId" class="btn-rent">Schedule Rental</a>
                <button class="btn-contact" onclick="alert('We will call you soon!')">Contact Us</button>
            </div>
        </div>

        <div class="description-section" style="margin-top: 40px;">
            <h2 class="section-title">Description</h2>
            <p class="description-text">@Model.Description</p>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
        function changeMainImage(src) {
            document.getElementById('mainImage').src = src;
            document.querySelectorAll('.thumbnail').forEach(t => {
                t.classList.remove('active');
                if (t.src.includes(src)) t.classList.add('active');
            });
        }
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelector('.thumbnail')?.classList.add('active');
        });
    </script>
</body>
</html>