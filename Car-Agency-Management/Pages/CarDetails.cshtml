@page "{carId?}"
@model Car_Agency_Management.Pages.CarDetailsModel
@{
    ViewData["Title"] = Model.CarName ?? "Car Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - AutoLux.Drive</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background-color: #f8f9fa;
            padding-top: 0;
        }

        /* Account for fixed navbar from layout */
        .car-details-container {
            padding-top: 100px;
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #0066cc;
            text-decoration: none;
            font-weight: 500;
            margin: 20px 0;
            transition: all 0.3s;
        }

            .back-button:hover {
                color: #004999;
                transform: translateX(-5px);
            }

        .car-details-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        .car-header {
            background: white;
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .car-title {
            font-size: 32px;
            font-weight: 700;
            color: #212529;
            margin-bottom: 10px;
        }

        .car-subtitle {
            font-size: 18px;
            color: #6c757d;
            margin-bottom: 20px;
        }

        .price-badge {
            display: inline-block;
            background: linear-gradient(135deg, #0066cc, #0099ff);
            color: white;
            padding: 12px 24px;
            border-radius: 8px;
            font-size: 24px;
            font-weight: 700;
        }

        .content-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }


            .content-grid

        {
            grid-template-columns: 1fr;
        }

        }

        .image-section {
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .main-image {
            width: 100%;
            height: 400px;
            object-fit: contain;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .thumbnail-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
        }

        .thumbnail {
            width: 100%;
            height: 80px;
            object-fit: cover;
            border-radius: 6px;
            cursor: pointer;
            border: 2px solid transparent;
            transition: all 0.3s;
        }

            .thumbnail:hover,
            .thumbnail.active {
                border-color: #0066cc;
                transform: scale(1.05);
            }

        .specs-section {
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .section-title {
            font-size: 22px;
            font-weight: 600;
            color: #212529;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #e9ecef;
        }

        .specs-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .spec-item {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .spec-icon {
            width: 40px;
            height: 40px;
            background: #e7f3ff;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #0066cc;
            font-size: 18px;
        }

        .spec-content {
            flex: 1;
        }

        .spec-label {
            font-size: 12px;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .spec-value {
            font-size: 16px;
            font-weight: 600;
            color: #212529;
        }

        .features-section {
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px;
            background: #f8f9fa;
            border-radius: 6px;
        }

        .feature-icon {
            color: #0066cc;
            font-size: 18px;
        }

        .feature-text {
            font-size: 14px;
            color: #212529;
        }

        .payment-section {
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .payment-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-bottom: 20px;
        }

        .payment-box {
            text-align: center;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .payment-label {
            font-size: 12px;
            color: #6c757d;
            margin-bottom: 8px;
            text-transform: uppercase;
        }

        .payment-value {
            font-size: 20px;
            font-weight: 700;
            color: #0066cc;
        }

        .description-section {
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .description-text {
            font-size: 15px;
            line-height: 1.8;
            color: #495057;
        }

        .action-buttons {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
            margin-top: 20px;
        }


            .action-buttons

        {
            grid-template-columns: 1fr;
        }

        }

        .btn-purchase {
            padding: 15px 30px;
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .btn-purchase:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(40, 167, 69, 0.3);
                color: white;
            }

        .btn-rent {
            padding: 15px 30px;
            background: linear-gradient(135deg, #0066cc, #0099ff);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .btn-rent:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(0,102,204,0.3);
            }

        .btn-contact {
            padding: 15px 30px;
            background: white;
            color: #0066cc;
            border: 2px solid #0066cc;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

            .btn-contact:hover {
                background: #0066cc;
                color: white;
            }

        .btn-edit {
            padding: 12px 24px;
            background: linear-gradient(135deg, #ffc107, #ff9800);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn-edit:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(255, 193, 7, 0.3);
                color: white;
            }

        .btn-delete {
            padding: 12px 24px;
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn-delete:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(220, 53, 69, 0.3);
                color: white;
            }
    </style>
</head>
<body>
    <div class="car-details-container">
        <a href="/Car-gallary" class="back-button">
            <i class="fas fa-arrow-left"></i>
            Back to Gallery
        </a>

        <div class="car-header">
            <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                <div style="flex: 1;">
                    <h1 class="car-title">@Model.CarName</h1>
                    <p class="car-subtitle">@Model.Year • @Model.Brand</p>
                    <div class="price-badge">@Model.Price EGP</div>
                </div>
                <div style="display: flex; gap: 10px; margin-top: 10px;">
                    <a href="/AddCar?carId=@Model.CarId" class="btn-edit" style="text-decoration: none;">
                        <i class="fas fa-edit" style="margin-right: 5px;"></i>
                        Edit
                    </a>
                    <form method="post" asp-page-handler="Delete" asp-route-carId="@Model.CarId" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this car?');">
                        <button type="submit" class="btn-delete">
                            <i class="fas fa-trash" style="margin-right: 5px;"></i>
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="content-grid">
            <!-- Image Section -->
            <div class="image-section">
                <img src="@Model.MainImage" alt="@Model.CarName" class="main-image" id="mainImage">
                <div class="thumbnail-grid">
                    @foreach (var img in Model.Images)
                    {
                            <img src="@img" alt="@Model.CarName" class="thumbnail" onclick="changeMainImage('@img')">
                    }
                </div>
            </div>

            <!-- Specifications Section -->
            <div class="specs-section">
                <h2 class="section-title">Specifications</h2>
                <div class="specs-grid">
                    <div class="spec-item">
                        <div class="spec-icon">
                            <i class="fas fa-car"></i>
                        </div>
                        <div class="spec-content">
                            <div class="spec-label">Brand</div>
                            <div class="spec-value">@Model.Brand</div>
                        </div>
                    </div>

                    <div class="spec-item">
                        <div class="spec-icon">
                            <i class="fas fa-calendar"></i>
                        </div>
                        <div class="spec-content">
                            <div class="spec-label">Year</div>
                            <div class="spec-value">@Model.Year</div>
                        </div>
                    </div>

                    <div class="spec-item">
                        <div class="spec-icon">
                            <i class="fas fa-cogs"></i>
                        </div>
                        <div class="spec-content">
                            <div class="spec-label">Transmission</div>
                            <div class="spec-value">@Model.Transmission</div>
                        </div>
                    </div>

                    <div class="spec-item">
                        <div class="spec-icon">
                            <i class="fas fa-gas-pump"></i>
                        </div>
                        <div class="spec-content">
                            <div class="spec-label">Fuel Type</div>
                            <div class="spec-value">@Model.FuelType</div>
                        </div>
                    </div>

                    <div class="spec-item">
                        <div class="spec-icon">
                            <i class="fas fa-tachometer-alt"></i>
                        </div>
                        <div class="spec-content">
                            <div class="spec-label">Engine</div>
                            <div class="spec-value">@Model.Engine</div>
                        </div>
                    </div>

                    <div class="spec-item">
                        <div class="spec-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="spec-content">
                            <div class="spec-label">Seats</div>
                            <div class="spec-value">@Model.Seats</div>
                        </div>
                    </div>

                    <div class="spec-item">
                        <div class="spec-icon">
                            <i class="fas fa-palette"></i>
                        </div>
                        <div class="spec-content">
                            <div class="spec-label">Color</div>
                            <div class="spec-value">@Model.Color</div>
                        </div>
                    </div>

                    <div class="spec-item">
                        <div class="spec-icon">
                            <i class="fas fa-road"></i>
                        </div>
                        <div class="spec-content">
                            <div class="spec-label">Mileage</div>
                            <div class="spec-value">@Model.Mileage km</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div class="features-section">
            <h2 class="section-title">Features & Equipment</h2>
            <div class="features-grid">
                @foreach (var feature in Model.Features)
                {
                        <div class="feature-item">
                            <i class="fas fa-check-circle feature-icon"></i>
                            <span class="feature-text">@feature</span>
                        </div>
                }
            </div>
        </div>

        <!-- Payment Details -->
        <div class="payment-section" style="margin-top: 30px;">
            <h2 class="section-title">Payment Options</h2>
            <div class="payment-grid">
                <div class="payment-box">
                    <div class="payment-label">Starting Price</div>
                    <div class="payment-value">@Model.Price EGP</div>
                </div>
                <div class="payment-box">
                    <div class="payment-label">Min. Deposit (15%)</div>
                    <div class="payment-value">@Model.MinDeposit EGP</div>
                </div>
                <div class="payment-box">
                    <div class="payment-label">Monthly Installment</div>
                    <div class="payment-value">@Model.MonthlyInstallment EGP</div>
                </div>
            </div>

            <div class="action-buttons">
                <button class="btn-purchase" onclick="alert('Purchase functionality coming soon!')">
                    <i class="fas fa-shopping-cart" style="margin-right: 8px;"></i>
                    Purchase Now
                </button>
                <a href="/rent?carId=@Model.CarId" class="btn-rent">
                    <i class="fas fa-calendar-check" style="margin-right: 8px;"></i>
                    Schedule Rental
                </a>
                <button class="btn-contact" onclick="alert('Contact functionality coming soon!')">
                    <i class="fas fa-phone" style="margin-right: 8px;"></i>
                    Contact Us
                </button>
            </div>
        </div>

        <!-- Description Section -->
        <div class="description-section" style="margin-top: 30px;">
            <h2 class="section-title">Description</h2>
            <p class="description-text">@Model.Description</p>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
        function changeMainImage(src) {
            document.getElementById('mainImage').src = src;

            // Update active thumbnail
            document.querySelectorAll('.thumbnail').forEach(thumb => {
                thumb.classList.remove('active');
                if (thumb.src === src) {
                    thumb.classList.add('active');
                }
            });
        }

        // Set first thumbnail as active on load
        document.addEventListener('DOMContentLoaded', () => {
            const firstThumbnail = document.querySelector('.thumbnail');
            if (firstThumbnail) {
                firstThumbnail.classList.add('active');
            }
        });
    </script>
</body>
</html>