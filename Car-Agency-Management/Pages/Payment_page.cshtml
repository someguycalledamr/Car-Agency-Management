@page
@model Car_Agency_Management.Pages.Payment_pageModel
@{
    ViewData["Title"] = "Payment / Booking";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, rgba(6, 182, 212, 0.03) 0%, rgba(14, 165, 233, 0.05) 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding-top: 100px;
        }

        .page-title {
            font-size: 28px;
            font-weight: 600;
            margin: 30px 0 20px 0;
            color: #212529;
        }

        .insurance-section, .payment-section {
            background-color: white;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .plan-btn {
            background-color: white;
            border: 2px solid #333;
            border-radius: 8px;
            padding: 10px 20px;
            margin: 5px;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 500;
        }

            .plan-btn:hover {
                background-color: #f0f0f0;
                transform: translateY(-2px);
            }

            .plan-btn.active {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

        .product-box {
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            padding: 15px;
            margin: 20px 0;
            display: flex;
            align-items: center;
            background: white;
        }

        .product-image {
            width: 120px;
            height: 90px;
            margin-right: 20px;
            border-radius: 6px;
            object-fit: cover;
        }

        .form-control {
            margin-bottom: 15px;
            border-radius: 6px;
            border: 1px solid #ccc;
            padding: 12px 15px;
        }

        .btn-submit {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 15px 40px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            width: 100%;
        }

            .btn-submit:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(40, 167, 69, 0.3);
            }

        .alert {
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show">
                <i class="fas fa-exclamation-triangle"></i> @TempData["WarningMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <h1 class="page-title">Payment / Booking</h1>

        <form method="post" id="paymentForm">
            <div class="row">
                <!-- Left Column - Insurance & Car Info -->
                <div class="col-lg-7">
                    <div class="insurance-section">
                        <h5 class="mb-3">Insurance Plans</h5>

                        <!-- Insurance Plan Selection -->
                        <div class="row mb-3">
                            @if (Model.InsurancePlans != null && Model.InsurancePlans.Count > 0)
                            {
                                @foreach (var plan in Model.InsurancePlans)
                                {
                                    <div class="col-md-6 mb-2">
                                        <button type="button" class="plan-btn w-100"
                                                data-plan="@plan.CoverageType"
                                                data-cost="@plan.Price">
                                            @plan.CoverageType
                                            <br><small>@plan.Price EGP</small>
                                        </button>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-12">
                                    <div class="alert alert-info">
                                        No insurance plans available for this car.
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Car Product Box -->
                        @if (Model.CarInfo != null)
                        {
                            <div class="product-box">
                                <img src="@Model.CarInfo.MainImage"
                                     alt="@Model.CarInfo.CarName"
                                     class="product-image"
                                     onerror="this.src='/images/placeholder-car.png'">
                                <div>
                                    <strong>@Model.CarInfo.CarName</strong><br>
                                    <span>Price: @Model.CarInfo.Price EGP</span><br>
                                    <small class="text-muted">Min. Deposit: @Model.CarInfo.MinDeposit EGP</small><br>
                                    <small class="text-muted">Monthly: @Model.CarInfo.MonthlyInstallment EGP</small>
                                </div>
                            </div>
                        }

                        <!-- Discount Code -->
                        <div class="discount-section mt-3">
                            <div class="input-group">
                                <input type="text"
                                       class="form-control"
                                       placeholder="Discount code"
                                       id="discountCodeInput"
                                       asp-for="DiscountCode">
                                <button type="button"
                                        class="btn btn-primary"
                                        onclick="validateDiscount()">
                                    Apply
                                </button>
                            </div>
                            <div id="discountMessage" class="mt-2"></div>
                        </div>

                        <!-- Transaction Type -->
                        <div class="mt-3">
                            <label>Transaction Type</label>
                            <select class="form-control" asp-for="TransactionType">
                                <option value="Rent">Rent</option>
                                <option value="Buy">Buy</option>
                            </select>
                        </div>

                        <!-- Subtotal -->
                        <div class="mt-4 pt-3 border-top">
                            <h6>Subtotal</h6>
                            <div id="subtotalDisplay" class="mb-2">
                                <strong>Total Amount: </strong>
                                <span id="totalAmount">@Model.CarInfo.MinDeposit EGP</span>
                            </div>
                            <input type="hidden" asp-for="TotalAmount" id="totalAmountInput">
                        </div>
                    </div>
                </div>

                <!-- Right Column - Payment Details -->
                <div class="col-lg-5">
                    <div class="payment-section">
                        <div class="text-center mb-3 p-2 bg-light rounded">
                            <i class="fas fa-lock"></i> All transactions are secure and encrypted
                        </div>

                        <h6 class="mb-3">
                            <i class="fas fa-credit-card"></i> Credit Card Payment
                            <span class="float-end">
                                <i class="fab fa-cc-mastercard text-danger fa-2x"></i>
                                <i class="fab fa-cc-visa text-primary fa-2x"></i>
                            </span>
                        </h6>

                        <!-- Card Number -->
                        <input type="text"
                               class="form-control"
                               placeholder="Card number (1234 5678 9012 3456)"
                               id="cardNumber"
                               asp-for="CardNumber"
                               maxlength="19"
                               required>
                        <span asp-validation-for="CardNumber" class="text-danger"></span>

                        <!-- Expiration & CVV -->
                        <div class="row">
                            <div class="col-6">
                                <input type="text"
                                       class="form-control"
                                       placeholder="MM/YY"
                                       id="expDate"
                                       asp-for="ExpirationDate"
                                       maxlength="5"
                                       required>
                                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                            </div>
                            <div class="col-6">
                                <input type="text"
                                       class="form-control"
                                       placeholder="CVV"
                                       id="cvv"
                                       asp-for="CVV"
                                       maxlength="3"
                                       required>
                                <span asp-validation-for="CVV" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Card Name -->
                        <input type="text"
                               class="form-control"
                               placeholder="Cardholder Name"
                               asp-for="CardName"
                               required>
                        <span asp-validation-for="CardName" class="text-danger"></span>

                        <!-- Hidden Fields -->
                        <input type="hidden" asp-for="CarId">
                        <input type="hidden" asp-for="CustomerId">
                        <input type="hidden" asp-for="SelectedInsurancePlan">

                        <!-- Submit Button -->
                        <button type="submit" class="btn-submit mt-3">
                            <i class="fas fa-check-circle"></i> Complete Payment
                        </button>

                        <!-- Validation Summary -->
                        <div asp-validation-summary="All" class="text-danger mt-3"></div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        let selectedPlanCost = parseFloat('@Model.CarInfo?.MinDeposit'.replace(/,/g, '')) || 0;
        let discountPercent = 0;

        // Plan selection
        document.querySelectorAll('.plan-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.plan-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                selectedPlanCost = parseFloat(this.dataset.cost) || 0;
                document.getElementById('SelectedInsurancePlan').value = this.dataset.plan;

                updateTotal();
            });
        });

        // Card number formatting
        document.getElementById('cardNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s/g, '');
            let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
            e.target.value = formattedValue;
        });

        // Expiration date formatting
        document.getElementById('expDate').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.slice(0, 2) + '/' + value.slice(2, 4);
            }
            e.target.value = value;
        });

        // CVV - numbers only
        document.getElementById('cvv').addEventListener('input', function(e) {
            e.target.value = e.target.value.replace(/\D/g, '');
        });

        // Validate discount code
        function validateDiscount() {
            const code = document.getElementById('discountCodeInput').value;
            const messageDiv = document.getElementById('discountMessage');

            if (!code) {
                messageDiv.innerHTML = '<div class="alert alert-warning">Please enter a discount code</div>';
                return;
            }

            // AJAX call to validate discount
            fetch(`?handler=ValidateDiscount&code=${encodeURIComponent(code)}`)
                .then(response => response.json())
                .then(data => {
                    if (data.valid) {
                        discountPercent = data.discountPercent;
                        messageDiv.innerHTML = `<div class="alert alert-success">${data.message}</div>`;
                        updateTotal();
                    } else {
                        discountPercent = 0;
                        messageDiv.innerHTML = `<div class="alert alert-danger">${data.message}</div>`;
                        updateTotal();
                    }
                })
                .catch(error => {
                    console.error('Error validating discount:', error);
                    messageDiv.innerHTML = '<div class="alert alert-danger">Error validating discount code</div>';
                });
        }

        // Update total amount
        function updateTotal() {
            const carPrice = parseFloat('@Model.CarInfo?.MinDeposit'.replace(/,/g, '')) || 0;
            let total = carPrice + selectedPlanCost;

            // Apply discount
            if (discountPercent > 0) {
                total = total - (total * discountPercent / 100);
            }

            document.getElementById('totalAmount').textContent = total.toFixed(2) + ' EGP';
            document.getElementById('totalAmountInput').value = total.toFixed(2);
        }

        // Initialize total on page load
        updateTotal();

        // Form submission validation
        document.getElementById('paymentForm').addEventListener('submit', function(e) {
            const cardNumber = document.getElementById('cardNumber').value.replace(/\s/g, '');
            const expDate = document.getElementById('expDate').value;
            const cvv = document.getElementById('cvv').value;

            if (cardNumber.length < 13) {
                alert('Please enter a valid card number');
                e.preventDefault();
                return false;
            }

            if (expDate.length !== 5 || !expDate.includes('/')) {
                alert('Please enter a valid expiration date (MM/YY)');
                e.preventDefault();
                return false;
            }

            if (cvv.length < 3) {
             1   alert('Please enter a valid CVV');
                e.preventDefault();
                return false;
            }

            return true;
        });
    </script>
</body>
</html>