    <script>
        let selectedBrands = new Set();
        let selectedPrices = new Set();

        function toggleFilter(filterName) {
            if (filterName === 'price') {
                const priceFilter = document.getElementById('price-filter');
                const arrow = document.getElementById('price-arrow');
                if (priceFilter.style.display === 'none') {
                    priceFilter.style.display = 'block';
                    arrow.classList.remove('fa-chevron-down');
                    arrow.classList.add('fa-chevron-up');
                } else {
                    priceFilter.style.display = 'none';
                    arrow.classList.remove('fa-chevron-up');
                    arrow.classList.add('fa-chevron-down');
                }
            } else if (filterName === 'brand') {
                const brandFilter = document.getElementById('brand-filter');
                const arrow = document.getElementById('brand-arrow');
                if (brandFilter.style.display === 'none') {
                    brandFilter.style.display = 'block';
                    arrow.classList.remove('fa-chevron-down');
                    arrow.classList.add('fa-chevron-up');
                } else {
                    brandFilter.style.display = 'none';
                    arrow.classList.remove('fa-chevron-up');
                    arrow.classList.add('fa-chevron-down');
                }
            }
        }

        // Add click effect to brand filter options with selection
        document.querySelectorAll('.brand-filter-option').forEach(option => {
            option.addEventListener('click', function() {
                this.classList.toggle('selected');
            });
        });

        // Add click effect to price options with selection
        document.querySelectorAll('.price-option').forEach(option => {
            option.addEventListener('click', function() {
                this.classList.toggle('selected');
            });
        });

        // Add hover effects to brand cards with single selection
        document.querySelectorAll('.brand-card').forEach(card => {
            card.addEventListener('click', function() {
                const brandName = this.querySelector('.brand-name').textContent;

                // Remove selection from all other brand cards
                document.querySelectorAll('.brand-card').forEach(c => c.classList.remove('selected'));

                // Toggle this card
                this.classList.toggle('selected');

                // Clear previous selections and add current if selected
                selectedBrands.clear();
                if (this.classList.contains('selected')) {
                    selectedBrands.add(brandName);
                }

                updateResults();
            });
        });

        // Add click effect to price range cards with selection
        document.querySelectorAll('.price-range-card').forEach(card => {
            card.addEventListener('click', function() {
                // Remove selection from all other cards
                document.querySelectorAll('.price-range-card').forEach(c => c.classList.remove('selected'));
                this.classList.add('selected');

                const priceValue = this.querySelector('.price-range-value').textContent;
                selectedPrices.clear();
                selectedPrices.add(priceValue);

                updateResults();
            });
        });

        // Add click effect to car cards with animation
        document.querySelectorAll('.car-card').forEach(card => {
            card.addEventListener('click', function() {
                const carTitle = this.querySelector('.car-title').textContent;

                // Add scale animation
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 200);

                // Show details modal (simplified alert for now)
                setTimeout(() => {
                    alert('Viewing details for: ' + carTitle);
                }, 200);
            });
        });

        // Sort functionality with animation
        document.querySelector('.sort-dropdown').addEventListener('change', function() {
            const sortValue = this.value;

            // Add loading animation
            const carGrid = document.querySelector('.row.g-4');
            carGrid.style.opacity = '0.5';
            carGrid.style.transform = 'translateY(20px)';

            setTimeout(() => {
                carGrid.style.opacity = '1';
                carGrid.style.transform = 'translateY(0)';
                console.log('Sorted by: ' + sortValue);
            }, 300);
        });

        // Update results count
        function updateResults() {
            console.log('Selected brands:', Array.from(selectedBrands));
            console.log('Selected prices:', Array.from(selectedPrices));
        }

        // Scroll arrows for brand grid
        const brandsGrid = document.getElementById('brandsGrid');
        const scrollLeft = document.getElementById('scrollLeft');
        const scrollRight = document.getElementById('scrollRight');

        if (scrollRight) {
            scrollRight.addEventListener('click', function() {
                brandsGrid.scrollBy({ left: 300, behavior: 'smooth' });
            });
        }

        if (scrollLeft) {
            scrollLeft.addEventListener('click', function() {
                brandsGrid.scrollBy({ left: -300, behavior: 'smooth' });
            });
        }

        // Show/hide scroll arrows based on scroll position
        function updateScrollArrows() {
            if (brandsGrid) {
                const isAtStart = brandsGrid.scrollLeft <= 0;
                const isAtEnd = brandsGrid.scrollLeft >= (brandsGrid.scrollWidth - brandsGrid.clientWidth - 10);

                if (scrollLeft) {
                    scrollLeft.style.opacity = isAtStart ? '0.3' : '1';
                    scrollLeft.style.pointerEvents = isAtStart ? 'none' : 'auto';
                }

                if (scrollRight) {
                    scrollRight.style.opacity = isAtEnd ? '0.3' : '1';
                    scrollRight.style.pointerEvents = isAtEnd ? 'none' : 'auto';
                }
            }
        }

        if (brandsGrid) {
            brandsGrid.addEventListener('scroll', updateScrollArrows);
            updateScrollArrows();
        }

        // Price guide function
        function showPriceGuide() {
            alert('Opening New Car Prices 2024-2025 Guide');
        }

        // Add smooth scroll behavior
        document.querySelectorAll('a[data-bs-toggle="tab"]').forEach(tab => {
            tab.addEventListener('shown.bs.tab', function() {
                this.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            });
        });
