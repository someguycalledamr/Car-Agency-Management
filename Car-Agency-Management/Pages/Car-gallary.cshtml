        <script>
            // Toggle filter sections
            function toggleFilter(filterName) {
            const filter = document.getElementById(filterName + '-filter');
            const arrow = document.getElementById(filterName + '-arrow');
            if (filter.style.display === 'none') {
            filter.style.display = 'block';
            arrow.classList.remove('fa-chevron-down');
            arrow.classList.add('fa-chevron-up');
            } else {
            filter.style.display = 'none';
            arrow.classList.remove('fa-chevron-up');
            arrow.classList.add('fa-chevron-down');
            }
            }
                     // Price filter selection
            document.querySelectorAll('.price-option').forEach(option => {
                option.addEventListener('click', function () {
                    this.classList.toggle('selected');
                });
            });

            // Price range card selection
            document.querySelectorAll('.price-range-card').forEach(card => {
                card.addEventListener('click', function () {
                    this.classList.toggle('selected');
                });
            });

            // Brand filter selection
            document.querySelectorAll('.brand-filter-option').forEach(option => {
                option.addEventListener('click', function () {
                    this.classList.toggle('selected');
                });
            });

            // Brand card selection
            document.querySelectorAll('.brand-card').forEach(card => {
                card.addEventListener('click', function () {
                    this.classList.toggle('selected');
                });
            });

            // Brand grid scrolling
            const brandsGrid = document.getElementById('brandsGrid');
            const scrollLeftBtn = document.getElementById('scrollLeft');
            const scrollRightBtn = document.getElementById('scrollRight');

            if (brandsGrid && scrollLeftBtn && scrollRightBtn) {
                scrollRightBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                    brandsGrid.scrollBy({ left: 300, behavior: 'smooth' });
                });

                scrollLeftBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    e.stopPropagation();
                    brandsGrid.scrollBy({ left: -300, behavior: 'smooth' });
                });

                // Show/hide arrows based on scroll position
                function updateArrowVisibility() {
                    const isAtStart = brandsGrid.scrollLeft <= 0;
                    const isAtEnd = brandsGrid.scrollLeft >= brandsGrid.scrollWidth - brandsGrid.clientWidth - 10;
                    
                    scrollLeftBtn.style.opacity = isAtStart ? '0.5' : '1';
                    scrollLeftBtn.style.pointerEvents = isAtStart ? 'none' : 'auto';
                    
                    scrollRightBtn.style.opacity = isAtEnd ? '0.5' : '1';
                    scrollRightBtn.style.pointerEvents = isAtEnd ? 'none' : 'auto';
                }

                brandsGrid.addEventListener('scroll', updateArrowVisibility);
                updateArrowVisibility();
            }

            // ========================================
            // MAKE CAR CARDS CLICKABLE
            // ========================================
            document.querySelectorAll('.car-card').forEach(card => {
                // Add cursor pointer style
                card.style.cursor = 'pointer';

                // Add click event listener
                card.addEventListener('click', function(e) {
                    // Get the car ID from data attribute
                    const carId = this.getAttribute('data-car-id');

                    if (carId) {
                        // Navigate to car details page
                        window.location.href = `/CarDetails/${carId}`;
                    } else {
                        // Fallback: create slug from car title
                        const carTitle = this.querySelector('.car-title').textContent.trim();
                        const slug = carTitle.toLowerCase()
                            .replace(/[^a-z0-9]+/g, '-')
                            .replace(/^-+|-+$/g, '');
                        window.location.href = `/CarDetails/${slug}`;
                    }
                });

                // Add hover effect for better UX
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-10px)';
                });

                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Add additional visual feedback styles
            const style = document.createElement('style');
            style.textContent = `
                .car-card {
                    cursor: pointer !important;
                    transition: all 0.3s ease !important;
                }

                .car-card:hover {
                    box-shadow: 0 15px 35px rgba(0,102,204,0.25) !important;
                }

                .car-card:active {
                    transform: translateY(-6px) !important;
                }
            `;
            document.head.appendChild(style);
