    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            margin: 0 !important;
            padding: 0 !important;
            width: 100%;
            height: 100%;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        body {
            background-color: #ffffff;
            padding-top: 0;
            position: relative;
            overflow-x: hidden;
        }

        /* Account for fixed navbar from layout */
        .container {
            padding-top: 100px;
        }

        /* Parallax Background - Same as Home Page */
        .parallax-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
        }

        .bg-layer {
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(6, 182, 212, 0.03) 0%, rgba(14, 165, 233, 0.05) 100%);
        }

        .floating-shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
            animation: float 20s infinite ease-in-out;
        }

        .shape-1 {
            width: 300px;
            height: 300px;
            background: #06b6d4;
            top: 10%;
            left: 5%;
            animation-delay: 0s;
        }

        .shape-2 {
            width: 200px;
            height: 200px;
            background: #1e293b;
            top: 60%;
            right: 10%;
            animation-delay: 3s;
        }

        .shape-3 {
            width: 150px;
            height: 150px;
            background: #06b6d4;
            bottom: 20%;
            left: 15%;
            animation-delay: 6s;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0) translateX(0) rotate(0deg);
            }
            33% {
                transform: translateY(-30px) translateX(20px) rotate(120deg);
            }
            66% {
                transform: translateY(20px) translateX(-30px) rotate(240deg);
            }
        }


        .breadcrumb-text {
            color: #6c757d;
            font-size: 14px;
            margin-bottom: 10px;
            margin-top: 20px;
        }

        .main-title {
            font-size: 24px;
            font-weight: 400;
            color: #212529;
            margin-bottom: 30px;
        }

        .sidebar {
            background-color: white;
            border-radius: 8px;
            padding: 25px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .sidebar-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .filter-section {
            border-bottom: 1px solid #e9ecef;
            padding: 15px 0;
        }

            .filter-section:last-child {
                border-bottom: none;
            }

        .filter-label {
            font-weight: 500;
            color: #212529;
            display: flex;
            justify-content: space-between;
            align-items: center;
            cursor: pointer;
        }

        .price-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            padding: 10px 0;
        }

        .price-option {
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 6px;
            padding: 12px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
            position: relative;
        }

            .price-option::before {
                content: '✓';
                position: absolute;
                top: 5px;
                right: 5px;
                width: 18px;
                height: 18px;
                background-color: #0066cc;
                color: white;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 10px;
                opacity: 0;
                transform: scale(0);
                transition: all 0.3s;
            }

            .price-option.selected::before {
                opacity: 1;
                transform: scale(1);
            }

            .price-option:hover {
                background-color: #e7f3ff;
                border-color: #0066cc;
                transform: scale(1.05);
            }

            .price-option.selected {
                background-color: #e7f3ff;
                border-color: #0066cc;
                border-width: 2px;
            }

        .price-label-text {
            font-size: 12px;
            color: #6c757d;
            margin-bottom: 5px;
        }

        .price-value {
            font-size: 14px;
            font-weight: 600;
            color: #212529;
        }

        .brand-filter-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            padding: 10px 0;
        }

        .brand-filter-option {
            background-color: white;
            border: 2px solid #e9ecef;
            border-radius: 6px;
            padding: 8px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

            .brand-filter-option:hover,
            .brand-filter-option.selected {
                border-color: #0066cc;
                background-color: #e7f3ff;
            }

        .brand-filter-logo {
            width: 40px;
            height: 40px;
            object-fit: contain;
            margin: 0 auto;
        }

        .prices-grid {
            display: grid;
            grid-template-columns: repeat(6, 1fr);
            gap: 15px;
            padding: 30px;
        }

        .price-range-card {
            text-align: center;
            padding: 20px 10px;
            border-radius: 8px;
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
            transition: all 0.3s;
            cursor: pointer;
            position: relative;
        }

            .price-range-card::before {
                content: '✓';
                position: absolute;
                top: 5px;
                right: 5px;
                width: 20px;
                height: 20px;
                background-color: #0066cc;
                color: white;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 12px;
                opacity: 0;
                transform: scale(0);
                transition: all 0.3s;
            }

            .price-range-card.selected::before {
                opacity: 1;
                transform: scale(1);
            }

            .price-range-card:hover {
                background-color: #e7f3ff;
                border-color: #0066cc;
                transform: translateY(-4px) scale(1.05);
                box-shadow: 0 4px 12px rgba(0,102,204,0.2);
            }

            .price-range-card.selected {
                background-color: #e7f3ff;
                border-color: #0066cc;
                border-width: 2px;
            }

        .price-range-label {
            font-size: 12px;
            color: #6c757d;
            margin-bottom: 8px;
        }

        .price-range-value {
            font-size: 16px;
            font-weight: 600;
            color: #212529;
        }

        .price-link {
            display: none;
        }

        .tabs-container {
            background-color: transparent;
            border-radius: 8px;
            padding: 0;
            margin-bottom: 20px;
            box-shadow: none;
        }

        .nav-tabs {
            border-bottom: 2px solid #e9ecef;
        }

            .nav-tabs .nav-link {
                color: #6c757d;
                border: none;
                padding: 20px 30px;
                font-weight: 500;
                border-bottom: 3px solid transparent;
            }

                .nav-tabs .nav-link.active {
                    color: #212529;
                    border-bottom: 3px solid #0066cc;
                    background-color: transparent;
                }

        .brands-grid {
            display: grid;
            grid-template-columns: repeat(6, 1fr);
            gap: 15px;
            padding: 20px;
            position: relative;
        }

        @@media (max-width: 1200px) {
            .brands-grid {
                grid-template-columns: repeat(5, 1fr);
            }
        }

        @@media (max-width: 992px) {
            .brands-grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }

        @@media (max-width: 768px) {
            .brands-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        @@media (max-width: 576px) {
            .brands-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }


            .brands-grid::-webkit-scrollbar {
                height: 8px;
            }

            .brands-grid::-webkit-scrollbar-track {
                background: #f1f1f1;
                border-radius: 4px;
            }

            .brands-grid::-webkit-scrollbar-thumb {
                background: #888;
                border-radius: 4px;
            }

                .brands-grid::-webkit-scrollbar-thumb:hover {
                    background: #555;
                }

        .brand-card {
            text-align: center;
            padding: 12px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            transition: all 0.3s;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            background-color: white;
            min-height: 120px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

            .brand-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
                transition: left 0.5s;
            }

            .brand-card:hover::before {
                left: 100%;
            }

            .brand-card:hover {
                background-color: #f8f9fa;
                transform: translateY(-5px) scale(1.05);
                box-shadow: 0 8px 16px rgba(0,0,0,0.15);
                border-color: #dee2e6;
            }

            .brand-card.selected {
                background-color: #e7f3ff;
                border: 3px solid #0066cc;
            }

                .brand-card.selected::after {
                    content: '✓';
                    position: absolute;
                    top: 5px;
                    right: 5px;
                    width: 20px;
                    height: 20px;
                    background-color: #0066cc;
                    color: white;
                    border-radius: 50%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 11px;
                    font-weight: bold;
                }

        .brand-logo {
            width: 50px;
            height: 50px;
            object-fit: contain;
            margin-bottom: 8px;
            transition: transform 0.3s;
        }

        .brand-card:hover .brand-logo {
            transform: scale(1.1);
        }

        .brand-name {
            font-weight: 500;
            color: #212529;
            margin-bottom: 3px;
            font-size: 13px;
        }

        .brand-count {
            color: #6c757d;
            font-size: 11px;
        }

        .results-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .results-count {
            font-size: 18px;
            font-weight: 600;
        }

        .sort-dropdown {
            border: 1px solid #dee2e6;
            border-radius: 6px;
            padding: 8px 15px;
            background-color: white;
            cursor: pointer;
            transition: all 0.3s;
        }

            .sort-dropdown:hover {
                border-color: #0066cc;
                box-shadow: 0 2px 8px rgba(0,102,204,0.1);
            }

            .sort-dropdown:focus {
                outline: none;
                border-color: #0066cc;
                box-shadow: 0 0 0 3px rgba(0,102,204,0.1);
            }

        .car-card {
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

            .car-card::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 4px;
                background: linear-gradient(90deg, #0066cc, #00aaff);
                transform: scaleX(0);
                transition: transform 0.3s;
            }

            .car-card:hover::after {
                transform: scaleX(1);
            }

            .car-card:hover {
                box-shadow: 0 12px 24px rgba(0,102,204,0.2);
                transform: translateY(-8px);
            }

            .car-card:active {
                transform: translateY(-4px);
            }

        .car-title {
            font-size: 18px;
            font-weight: 600;
            color: #212529;
            margin-bottom: 15px;
        }

        .car-image {
            width: 100%;
            height: 200px;
            object-fit: contain;
            margin-bottom: 15px;
            transition: transform 0.4s ease;
        }

        .car-card:hover .car-image {
            transform: scale(1.1) rotate(2deg);
        }

        .price-section {
            border-top: 1px solid #e9ecef;
            padding-top: 15px;
        }

        .starting-price {
            color: #6c757d;
            font-size: 14px;
            margin-bottom: 5px;
        }

        .price-amount {
            font-size: 24px;
            font-weight: 700;
            color: #212529;
            margin-bottom: 15px;
        }

        .payment-details {
            display: flex;
            justify-content: space-between;
            gap: 10px;
        }

        .payment-box {
            flex: 1;
        }

        .payment-label {
            color: #6c757d;
            font-size: 12px;
            margin-bottom: 3px;
        }

        .payment-value {
            font-weight: 600;
            color: #212529;
            font-size: 14px;
        }

        .scroll-arrow {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
            cursor: pointer;
            transition: all 0.3s;
            z-index: 100;
            color: #0066cc;
            font-size: 16px;
            backdrop-filter: blur(10px);
        }

            .scroll-arrow:hover {
                background-color: #0066cc;
                color: white;
                transform: translateY(-50%) scale(1.1);
                box-shadow: 0 4px 12px rgba(0,102,204,0.4);
            }

            .scroll-arrow:active {
                transform: translateY(-50%) scale(0.95);
            }

        .scroll-arrow-left {
            left: 10px;
            right: auto;
        }

        .row.g-4 {
            transition: all 0.3s ease;
        }

        .container {
            padding-top: 20px;
        }

        .btn-add-car {
            padding: 15px 30px;
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 8px rgba(40, 167, 69, 0.2);
        }

            .btn-add-car:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(40, 167, 69, 0.3);
                color: white;
            }
    </style>
</head>
