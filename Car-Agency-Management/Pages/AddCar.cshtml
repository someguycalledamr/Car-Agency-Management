@page "{carId?}"
@model Car_Agency_Management.Pages.AddCarModel
@{
    ViewData["Title"] = Model.IsEditMode ? "Edit Car" : "Add New Car";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - AutoLux.Drive</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background-color: #f8f9fa;
            padding-top: 80px;
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: #0066cc;
            text-decoration: none;
            font-weight: 500;
            margin: 20px 0;
            transition: all 0.3s;
        }

            .back-button:hover {
                color: #004999;
                transform: translateX(-5px);
            }

        .form-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }

        .form-card {
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            margin-bottom: 20px;
        }

        .form-title {
            font-size: 28px;
            font-weight: 700;
            color: #212529;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 600;
            color: #212529;
            margin-bottom: 8px;
            display: block;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s;
        }

            .form-control:focus {
                outline: none;
                border-color: #0066cc;
                box-shadow: 0 0 0 3px rgba(0,102,204,0.1);
            }

        .form-control-textarea {
            min-height: 120px;
            resize: vertical;
        }

        .form-row {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .features-input-group {
            display: flex;
            gap: 10px;
            margin-bottom: 10px;
        }

        .feature-tag {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: #e7f3ff;
            color: #0066cc;
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 14px;
            margin: 5px 5px 5px 0;
        }

        .feature-tag-remove {
            cursor: pointer;
            color: #dc3545;
            font-weight: bold;
        }

            .feature-tag-remove:hover {
                color: #c82333;
            }

        .images-input-group {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .image-input-row {
            display: flex;
            gap: 10px;
        }

        .btn-add-feature, .btn-add-image {
            padding: 10px 20px;
            background: #0066cc;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

            .btn-add-feature:hover, .btn-add-image:hover {
                background: #004999;
                transform: translateY(-2px);
            }

        .btn-remove {
            padding: 10px 15px;
            background: #dc3545;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s;
        }

            .btn-remove:hover {
                background: #c82333;
            }

        .action-buttons {
            display: flex;
            gap: 15px;
            justify-content: flex-end;
            margin-top: 30px;
        }

        .btn-submit {
            padding: 15px 40px;
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

            .btn-submit:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(40, 167, 69, 0.3);
            }

        .btn-cancel {
            padding: 15px 40px;
            background: white;
            color: #6c757d;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
        }

            .btn-cancel:hover {
                background: #f8f9fa;
                border-color: #dee2e6;
                color: #212529;
            }

        @@media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <a href="/Car-gallery" class="back-button">
            <i class="fas fa-arrow-left"></i>
            Back to Gallery
        </a>

        <div class="form-card">
            <h1 class="form-title">@ViewData["Title"]</h1>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="CarId" />

                <!-- Basic Information -->
                <div class="form-group">
                    <label class="form-label">Car Name *</label>
                    <input type="text" class="form-control" asp-for="CarName" required />
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Brand *</label>
                        <input type="text" class="form-control" asp-for="Brand" required />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Year *</label>
                        <input type="text" class="form-control" asp-for="Year" required />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Price (EGP) *</label>
                        <input type="text" class="form-control" asp-for="Price" required />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Color *</label>
                        <input type="text" class="form-control" asp-for="Color" required />
                    </div>
                </div>

                <!-- Specifications -->
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Transmission *</label>
                        <select class="form-control" asp-for="Transmission" required>
                            <option value="">Select...</option>
                            <option value="Automatic">Automatic</option>
                            <option value="Manual">Manual</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Fuel Type *</label>
                        <select class="form-control" asp-for="FuelType" required>
                            <option value="">Select...</option>
                            <option value="Petrol">Petrol</option>
                            <option value="Diesel">Diesel</option>
                            <option value="Hybrid">Hybrid</option>
                            <option value="Electric">Electric</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Engine *</label>
                        <input type="text" class="form-control" asp-for="Engine" placeholder="e.g., 1.5L 4-Cylinder" required />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Seats *</label>
                        <input type="text" class="form-control" asp-for="Seats" required />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Mileage (km) *</label>
                    <input type="text" class="form-control" asp-for="Mileage" required />
                </div>

                <!-- Images -->
                <div class="form-group">
                    <label class="form-label">Main Image URL *</label>
                    <input type="text" class="form-control" asp-for="MainImage" placeholder="/images/car-image.png" required />
                </div>

                <div class="form-group">
                    <label class="form-label">Additional Images</label>
                    <div id="imagesContainer">
                        @if (Model.Images != null && Model.Images.Count > 0)
                        {
                            for (int i = 0; i < Model.Images.Count; i++)
                            {
                                <div class="image-input-row">
                                    <input type="text" class="form-control" name="Images[@i]" value="@Model.Images[i]" placeholder="/images/car-image.png" />
                                    <button type="button" class="btn-remove" onclick="removeImage(this)">Remove</button>
                                </div>
                            }
                        }
                    </div>
                    <button type="button" class="btn-add-image" onclick="addImageInput()" style="margin-top: 10px;">
                        <i class="fas fa-plus"></i> Add Image
                    </button>
                </div>

                <!-- Payment Details -->
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Min. Deposit (EGP) *</label>
                        <input type="text" class="form-control" asp-for="MinDeposit" required />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Monthly Installment (EGP) *</label>
                        <input type="text" class="form-control" asp-for="MonthlyInstallment" required />
                    </div>
                </div>

                <!-- Features -->
                <div class="form-group">
                    <label class="form-label">Features</label>
                    <div id="featuresContainer">
                        @if (Model.Features != null && Model.Features.Count > 0)
                        {
                            foreach (var feature in Model.Features)
                            {
                                <span class="feature-tag">
                                    @feature
                                    <span class="feature-tag-remove" onclick="removeFeature(this)">×</span>
                                </span>
                            }
                        }
                    </div>
                    <div class="features-input-group">
                        <input type="text" class="form-control" id="newFeatureInput" placeholder="Enter a feature and press Add" />
                        <button type="button" class="btn-add-feature" onclick="addFeature()">Add Feature</button>
                    </div>
                    <input type="hidden" id="featuresInput" name="FeaturesString" value="@string.Join(",", Model.Features ?? new List<string>())" />
                </div>

                <!-- Description -->
                <div class="form-group">
                    <label class="form-label">Description *</label>
                    <textarea class="form-control form-control-textarea" asp-for="Description" required></textarea>
                </div>

                <!-- Action Buttons -->
                <div class="action-buttons">
                    <a href="/Car-gallery" class="btn-cancel">Cancel</a>
                    <button type="submit" class="btn-submit">
                        <i class="fas fa-save" style="margin-right: 8px;"></i>
                        @(Model.IsEditMode ? "Update Car" : "Add Car")
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script>
        let imageIndex = @(Model.Images?.Count ?? 0);
        let features = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Features ?? new List<string>()));

        function addImageInput() {
            const container = document.getElementById('imagesContainer');
            const row = document.createElement('div');
            row.className = 'image-input-row';
            row.innerHTML = `
                <input type="text" class="form-control" name="Images[${imageIndex}]" placeholder="/images/car-image.png" />
                <button type="button" class="btn-remove" onclick="removeImage(this)">Remove</button>
            `;
            container.appendChild(row);
            imageIndex++;
        }

        function removeImage(button) {
            button.parentElement.remove();
        }

        function addFeature() {
            const input = document.getElementById('newFeatureInput');
            const feature = input.value.trim();
            if (feature && !features.includes(feature)) {
                features.push(feature);
                updateFeaturesDisplay();
                input.value = '';
            }
        }

        function removeFeature(button) {
            const featureText = button.parentElement.textContent.replace('×', '').trim();
            features = features.filter(f => f !== featureText);
            updateFeaturesDisplay();
        }

        function updateFeaturesDisplay() {
            const container = document.getElementById('featuresContainer');
            container.innerHTML = '';
            features.forEach(feature => {
                const tag = document.createElement('span');
                tag.className = 'feature-tag';
                tag.innerHTML = `${feature} <span class="feature-tag-remove" onclick="removeFeature(this)">×</span>`;
                container.appendChild(tag);
            });
            document.getElementById('featuresInput').value = features.join(',');
        }

        // Allow Enter key to add feature
        document.getElementById('newFeatureInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                addFeature();
            }
        });
    </script>
</body>
</html>

