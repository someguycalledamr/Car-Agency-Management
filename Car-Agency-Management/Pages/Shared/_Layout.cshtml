<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Car_Agency_Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Car_Agency_Management.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Frosted Glass Navbar Styles */
        .navbar-glass {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            width: 100%;
            z-index: 1000;
            background: rgba(22, 22, 23, 0.7) !important;
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

            .navbar-glass.scrolled {
                position: fixed;
                background: rgba(22, 22, 23, 0.85) !important;
                backdrop-filter: blur(25px);
                -webkit-backdrop-filter: blur(25px);
                box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.5);
            }

            .navbar-glass .navbar-brand,
            .navbar-glass .nav-link {
                color: #ffffff !important;
                font-weight: 500;
                transition: all 0.3s ease;
            }

                .navbar-glass .nav-link:hover {
                    color: #00aaff !important;
                    transform: translateY(-2px);
                }

            .navbar-glass .navbar-toggler {
                border: 1px solid rgba(255, 255, 255, 0.3);
            }

            .navbar-glass .navbar-toggler-icon {
                background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.8%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
            }

        .navbar-brand img {
            max-height: 50px;
            transition: transform 0.3s ease;
            filter: brightness(1.2);
        }

            .navbar-brand img:hover {
                transform: scale(1.05);
            }

        /* Admin Dashboard Special Link */
        .nav-link.admin-dashboard {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 8px 16px !important;
            border-radius: 8px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-left: 8px;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

            .nav-link.admin-dashboard:hover {
                background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
                transform: translateY(-3px) !important;
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
                border-color: rgba(255, 255, 255, 0.5);
            }

        .admin-icon {
            font-size: 1.2rem;
            animation: pulse 2s infinite;
        }

         pulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }

        }

        /* Add padding to body to account for fixed navbar */
        body {
            padding-top: 80px;
        }

        /* Smooth scroll */
        html {
            scroll-behavior: smooth;
        }

        /* Mobile responsive for admin button */

            .nav-link.admin-dashboard

        {
            margin-left: 0;
            margin-top: 8px;
            justify-content: center;
        }

        body footer.footer,
        footer.footer.border-top,
        footer.footer.text-muted {
            background: rgba(22, 22, 23, 0.7) !important;
            backdrop-filter: blur(20px) !important;
            -webkit-backdrop-filter: blur(20px) !important;
            border-top: 1px solid rgba(255, 255, 255, 0.1) !important;
            /* box-shadow: 0 -8px 32px 0 rgba(0, 0, 0, 0.3) !important; */
            color: #ffffff !important;
            padding: 60px 20px 30px !important;
            margin-top: auto !important;
        }

        footer.footer * {
            color: inherit !important;
        }

        footer.footer h3 {
            color: #ffffff !important;
        }

        footer.footer .footer-section a,
        footer.footer .footer-section p,
        footer.footer .footer-section li {
            color: rgba(255, 255, 255, 0.8) !important;
        }

        footer.footer .footer-bottom,
        footer.footer .footer-bottom p {
            color: rgba(255, 255, 255, 0.7) !important;
        }

            footer.footer .footer-bottom a {
                color: #ffffff !important;
            }

        html, body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

            body > .container {
                flex: 1;
            }

        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 40px;
            margin-bottom: 40px;
        }

        .footer-section h3 {
            font-size: 18px;
            margin-bottom: 20px;
            font-weight: 600;
            opacity: 0.9;
        }

        .footer-section ul {
            list-style: none;
            padding: 0;
        }

            .footer-section ul li {
                margin-bottom: 12px;
            }

        .footer-section a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-block;
        }

            .footer-section a:hover {
                color: white;
                transform: translateX(5px);
            }

        .footer-section p {
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.6;
        }

        .social-links {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

            .social-links a {
                width: 40px;
                height: 40px;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: all 0.3s ease;
            }

                .social-links a:hover {
                    background: rgba(255, 255, 255, 0.2);
                    transform: translateY(-3px);
                }

        .footer-bottom {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding-top: 30px;
            text-align: center;
            color: rgba(255, 255, 255, 0.7);
            font-size: 14px;
        }

            .footer-bottom a {
                color: white;
                text-decoration: none;
                margin: 0 10px;
                transition: opacity 0.3s ease;
            }

                .footer-bottom a:hover {
                    opacity: 0.8;
                }

        @@media (max-width: 768px) {
            .footer-content

        {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        }

    </style>
</head>
