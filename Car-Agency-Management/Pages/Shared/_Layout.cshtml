<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Car_Agency_Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Car_Agency_Management.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Frosted Glass Navbar Styles */
        .navbar-glass {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            width: 100%;
            z-index: 1000;
            background: rgba(22, 22, 23, 0.7) !important;
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

            .navbar-glass.scrolled {
                position: fixed;
                background: rgba(22, 22, 23, 0.85) !important;
                backdrop-filter: blur(25px);
                -webkit-backdrop-filter: blur(25px);
                box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.5);
            }

            .navbar-glass .navbar-brand,
            .navbar-glass .nav-link {
                color: #ffffff !important;
                font-weight: 500;
                transition: all 0.3s ease;
            }

                .navbar-glass .nav-link:hover {
                    color: #00aaff !important;
                    transform: translateY(-2px);
                }

            .navbar-glass .navbar-toggler {
                border: 1px solid rgba(255, 255, 255, 0.3);
            }

            .navbar-glass .navbar-toggler-icon {
                background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.8%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
            }

        .navbar-brand img {
            max-height: 50px;
            transition: transform 0.3s ease;
            filter: brightness(1.2);
        }

            .navbar-brand img:hover {
                transform: scale(1.05);
            }

        /* Admin Dashboard Special Link */
        .nav-link.admin-dashboard {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 8px 16px !important;
            border-radius: 8px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-left: 8px;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

            .nav-link.admin-dashboard:hover {
                background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
                transform: translateY(-3px) !important;
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
                border-color: rgba(255, 255, 255, 0.5);
            }

        .admin-icon {
            font-size: 1.2rem;
            animation: pulse 2s infinite;
        }

         pulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }

        }

        /* Add padding to body to account for fixed navbar */
        body {
            padding-top: 80px;
        }

        /* Smooth scroll */
        html {
            scroll-behavior: smooth;
        }

        /* Mobile responsive for admin button */

            .nav-link.admin-dashboard

        {
            margin-left: 0;
            margin-top: 8px;
            justify-content: center;
        }

        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-glass" id="mainNavbar">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Redline Garage</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Payment_page">Payment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Car-gallary">Car Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/rent">Rent</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/sign_up">Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/maintenance">maintenance</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link admin-dashboard" asp-area="" asp-page="/AdminDashboard">
                                <i class="fas fa-user-shield admin-icon"></i>
                                Admin Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-page-handler="ProfileRedirect">
                                <button type="submit" class="nav-link btn btn-link" style="color: #ffffff; padding: 8px 16px; border: none;">
                                    <i class="fas fa-user"></i> Profile
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Car_Agency_Management - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Dynamic Navbar Scroll Effect
        window.addEventListener('scroll', function() {
            const navbar = document.getElementById('mainNavbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Highlight active page
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                if (link.getAttribute('href')) {
                    const linkPath = new URL(link.href, window.location.origin).pathname;
                    if (currentPath === linkPath) {
                        link.style.color = '#00aaff';
                        link.style.fontWeight = '700';
                    }
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>