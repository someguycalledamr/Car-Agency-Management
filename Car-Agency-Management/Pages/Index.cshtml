@page
@model IndexModel
@{
    ViewData["Title"] = "AutoLux.Drive - Premium Mobility";
    //Layout = null; // Remove default layout to use custom design
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AutoLux.Drive - Premium Mobility</title>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap');

        /* ================================================= */
        /* 1. COLOR PALETTE & GLOBAL STYLES */
        /* ================================================= */
        :root {
            --color-bg: #ffffff;
            --color-primary: #f8fafc;
            --color-accent: #06b6d4;
            --color-secondary: #1e293b;
            --color-text-dark: #334155;
            --color-text-muted: #64748b;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: var(--color-bg);
            color: var(--color-text-dark);
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
            overflow-x: hidden;
            position: relative;
        }

        /* ================================================= */
        /* 2. DRIFTING CAR VIDEO OVERLAY */
        /* ================================================= */
        .car-video-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 100; /* Changed from 9999 to 100 */
            overflow: hidden;
        }


        .drifting-car {
            position: fixed;
            width: 400px;
            height: auto;
            top: -300px;
            right: -700px;
            opacity: 0;
            transform: rotate(-20deg);
            animation: carDriftIn 5s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
            z-index: 100; /* Changed from 10 to 100 */
            pointer-events: none;
            transition: transform 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55), top 0.3s ease-out;
        }

            .drifting-car.scrolling-down {
                transform: rotate(90deg) scale(0.8) !important;
            }

            .drifting-car.scrolling-up {
                transform: rotate(-90deg) scale(0.8) !important;
            }

        .car-svg {
            width: 100%;
            height: auto;
            filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.4)) drop-shadow(0 10px 20px rgba(6, 182, 212, 0.3));
        }

        /* Wheel Rotation Animation */
        .wheel-front,
        .wheel-back {
            animation: wheelSpin 0.4s linear infinite;
            transform-origin: center;
        }

        @@keyframes wheelSpin {
            from {
                transform: translate(0, 0) rotate(0deg);
            }

            to {
                transform: translate(0, 0) rotate(360deg);
            }
        }

        /* Spoke Rotation */
        .spoke {
            animation: spokeRotate 0.4s linear infinite;
            transform-origin: center;
        }

        @@keyframes spokeRotate {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        /* Car Body Bounce Effect */
        .car-body {
            animation: bodyBounce 0.3s ease-in-out infinite;
            transform-origin: center;
        }

        @@keyframes bodyBounce {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-2px);
            }
        }

        /* Stop animations when parked */
        .drifting-car.parked .wheel-front,
        .drifting-car.parked .wheel-back,
        .drifting-car.parked .spoke,
        .drifting-car.parked .car-body,
        .drifting-car.parked .speed-lines {
            animation: none !important;
        }

        .drifting-car.parked .speed-lines {
            opacity: 0 !important;
        }

        @@keyframes carDriftIn {
            0% {
                top: -300px;
                right: -700px;
                opacity: 0;
                transform: rotate(-25deg) scale(0.6);
            }

            10% {
                opacity: 1;
            }

            35% {
                top: 180px;
                right: 60%;
                transform: rotate(12deg) scale(1.2);
            }

            55% {
                top: 150px;
                right: 50%;
                transform: rotate(-8deg) scale(1.15);
            }

            75% {
                top: 130px;
                right: 40%;
                transform: rotate(4deg) scale(1.08);
            }

            90% {
                top: 150px;
                right: 70px;
                transform: rotate(-2deg) scale(1.03);
            }

            100% {
                top: 200px;
                right: 0px;
                opacity: 1;
                transform: rotate(0deg) scale(0.8);
            }
        }

        @@media (max-width: 1200px) {
            .drifting-car {
                width: 320px;
            }

            @@keyframes carDriftIn {
                0% {
                    top: -250px;
                    right: -600px;
                    opacity: 0;
                    transform: rotate(-25deg) scale(0.6);
                }

                10% {
                    opacity: 1;
                }

                40% {
                    top: 140px;
                    right: 55%;
                    transform: rotate(10deg) scale(1.1);
                }

                60% {
                    top: 120px;
                    right: 48%;
                    transform: rotate(-6deg) scale(1.05);
                }

                100% {
                    top: 150px;
                    right: 0px;
                    opacity: 1;
                    transform: rotate(0deg) scale(0.75);
                }
            }
        }

        @@media (max-width: 768px) {
            .drifting-car {
                width: 220px;
                animation: carDriftInMobile 4s cubic-bezier(0.22, 0.61, 0.36, 1) forwards;
            }

            @@keyframes carDriftInMobile {
                0% {
                    top: -200px;
                    right: -400px;
                    opacity: 0;
                    transform: rotate(-22deg) scale(0.5);
                }

                15% {
                    opacity: 1;
                }

                50% {
                    top: 90px;
                    right: 50%;
                    transform: rotate(8deg) scale(0.85);
                }

                100% {
                    top: 120px;
                    right: 20px;
                    opacity: 1;
                    transform: rotate(0deg) scale(0.6);
                }
            }
        }

        /* Smoke/Drift Effect */
        .drift-smoke {
            position: absolute;
            width: 300px;
            height: 150px;
            background: radial-gradient(ellipse at center, rgba(120, 120, 120, 0.5) 0%, rgba(6, 182, 212, 0.2) 30%, transparent 70%);
            border-radius: 50%;
            filter: blur(25px);
            animation: smokeEffect 2.5s ease-out forwards;
            opacity: 0;
            right: 15%;
            top: 28%;
        }

        @@keyframes smokeEffect {
            0% {
                opacity: 0;
                transform: scale(0.3) rotate(0deg);
            }

            20% {
                opacity: 0.8;
                transform: scale(0.6) rotate(5deg);
            }

            50% {
                opacity: 0.6;
                transform: scale(1.2) rotate(-5deg);
                right: 35%;
                top: 24%;
            }

            100% {
                opacity: 0;
                transform: scale(2.5) rotate(10deg);
                right: 50%;
                top: 20%;
            }
        }

        /* Tire Marks Effect */
        .tire-marks {
            position: absolute;
            width: 600px;
            height: 80px;
            background: repeating-linear-gradient(90deg, rgba(40, 40, 40, 0.15) 0px, rgba(40, 40, 40, 0.15) 8px, transparent 8px, transparent 12px);
            opacity: 0;
            transform: rotate(15deg);
            animation: tireMarks 2s ease-out forwards;
            filter: blur(1px);
            right: 5%;
            top: 30%;
        }

        @@keyframes tireMarks {
            0% {
                opacity: 0;
                width: 100px;
            }

            30% {
                opacity: 0.4;
            }

            100% {
                opacity: 0;
                width: 600px;
                right: 40%;
            }
        }

        /* ================================================= */
        /* 3. PARALLAX BACKGROUND LAYERS */
        /* ================================================= */
        .parallax-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
        }

        .bg-layer {
            position: absolute;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(6, 182, 212, 0.03) 0%, rgba(14, 165, 233, 0.05) 100%);
        }

        .floating-shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
            animation: float 20s infinite ease-in-out;
        }

        .shape-1 {
            width: 300px;
            height: 300px;
            background: var(--color-accent);
            top: 10%;
            left: 5%;
            animation-delay: 0s;
        }

        .shape-2 {
            width: 200px;
            height: 200px;
            background: var(--color-secondary);
            top: 60%;
            right: 10%;
            animation-delay: 3s;
        }

        .shape-3 {
            width: 150px;
            height: 150px;
            background: var(--color-accent);
            bottom: 20%;
            left: 15%;
            animation-delay: 6s;
        }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0) translateX(0) rotate(0deg);
            }

            33% {
                transform: translateY(-30px) translateX(20px) rotate(120deg);
            }

            66% {
                transform: translateY(20px) translateX(-30px) rotate(240deg);
            }
        }

        @@keyframes slideDown {
            from {
                transform: translateY(-100%);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .logo {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--color-secondary);
            letter-spacing: -0.5px;
            animation: logoGlow 3s ease-in-out infinite;
        }

            .logo span {
                color: var(--color-accent);
            }

        @@keyframes logoGlow {
            0%, 100% {
                text-shadow: 0 0 10px rgba(6, 182, 212, 0.3);
            }

            50% {
                text-shadow: 0 0 20px rgba(6, 182, 212, 0.6);
            }
        }


        @@keyframes pulse {
            0%, 100% {
                opacity: 1;
            }

            50% {
                opacity: 0.6;
            }
        }

        /* ================================================= */
        /* 5. HERO SECTION (Enhanced) */
        /* ================================================= */
        .content-container {
            max-width: 1300px;
            margin: 0 auto;
            padding: 0 4%;
            position: relative;
            z-index: 200; /* EDITED: Set higher than the car (100) */
        }

        .hero {
            min-height: 600px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 80px 0;
            gap: 40px;
            position: relative;
        }

        .hero-text {
            flex: 1;
            max-width: 50%;
            animation: slideInLeft 1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        @@keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-100px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .hero-content h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 15px;
            color: var(--color-secondary);
            line-height: 1.2;
        }

            .hero-content h1 span {
                color: var(--color-accent);
                display: inline-block;
                animation: textShine 3s ease-in-out infinite;
                background: linear-gradient(90deg, var(--color-accent), #0ea5e9, var(--color-accent));
                background-size: 200% auto;
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

        @@keyframes textShine {
            to {
                background-position: 200% center;
            }
        }

        .hero-content p {
            font-size: 1.2rem;
            color: var(--color-text-muted);
            margin: 0 0 40px;
            animation: fadeInUp 1s ease-out 0.3s backwards;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .hero-image-wrapper {
            flex: 1;
            min-width: 45%;
            position: relative;
            overflow: hidden;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(6, 182, 212, 0.3);
            animation: slideInRight 1s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.2s backwards;
        }

        @@keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(100px) rotate(5deg);
            }

            to {
                opacity: 1;
                transform: translateX(0) rotate(0deg);
            }
        }

        .hero-image-wrapper::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transform: rotate(45deg);
            animation: shimmer 3s infinite;
        }

        @@keyframes shimmer {
            0% {
                transform: translateX(-100%) translateY(-100%) rotate(45deg);
            }

            100% {
                transform: translateX(100%) translateY(100%) rotate(45deg);
            }
        }

        .hero-image-wrapper img {
            width: 100%;
            height: auto;
            display: block;
            transition: transform 1.5s ease;
        }

        .hero-image-wrapper:hover img {
            transform: scale(1.1) rotate(2deg);
        }

        /* ================================================= */
        /* 6. CTA BUTTON (Micro-interactions) */
        /* ================================================= */
        .cta-button {
            display: inline-block;
            padding: 16px 35px;
            background: linear-gradient(135deg, var(--color-accent), #0ea5e9);
            color: white;
            text-decoration: none;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 50px;
            transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 10px 30px rgba(6, 182, 212, 0.4);
            border: none;
            position: relative;
            overflow: hidden;
            animation: fadeInUp 1s ease-out 0.6s backwards;
        }

            .cta-button::before {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 0;
                height: 0;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.3);
                transform: translate(-50%, -50%);
                transition: width 0.6s, height 0.6s;
            }

            .cta-button:hover::before {
                width: 300px;
                height: 300px;
            }

            .cta-button:hover {
                transform: translateY(-5px) scale(1.05);
                box-shadow: 0 15px 40px rgba(6, 182, 212, 0.6);
            }

            .cta-button:active {
                transform: translateY(-2px) scale(1.02);
            }

        /* ================================================= */
        /* 7. SECTION HEADERS (3D Effect) */
        /* ================================================= */
        .section-header {
            text-align: center;
            margin: 80px 0 40px;
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--color-secondary);
            perspective: 1000px;
            opacity: 0;
            transform: translateY(50px);
            transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

            .section-header.in-view {
                opacity: 1;
                transform: translateY(0);
            }

            .section-header span {
                display: inline-block;
                background: linear-gradient(135deg, var(--color-accent), #0ea5e9);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                animation: textFloat 3s ease-in-out infinite;
            }

        @@keyframes textFloat {
            0%, 100% {
                transform: translateY(0) rotateX(0deg);
            }

            50% {
                transform: translateY(-10px) rotateX(5deg);
            }
        }

        /* ================================================= */
        /* 8. CAR CARDS (Advanced Hover Effects) */
        /* ================================================= */
        .car-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 30px;
            margin-bottom: 80px;
        }

        .car-card {
            background-color: var(--color-primary);
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            border: 1px solid #e5e7eb;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            opacity: 0;
            transform: translateY(50px) scale(0.9);
            position: relative;
        }

            .car-card.in-view {
                opacity: 1;
                transform: translateY(0) scale(1);
            }

            .car-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(6, 182, 212, 0.2), transparent);
                transition: left 0.7s;
                z-index: 1;
            }

            .car-card:hover::before {
                left: 100%;
            }

            .car-card:hover {
                transform: translateY(-15px) rotateX(5deg) scale(1.03);
                box-shadow: 0 25px 50px rgba(6, 182, 212, 0.3);
                border-color: var(--color-accent);
            }

        .car-image-wrapper {
            height: 200px;
            overflow: hidden;
            position: relative;
        }

            .car-image-wrapper::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 50%;
                background: linear-gradient(to top, rgba(0, 0, 0, 0.3), transparent);
                opacity: 0;
                transition: opacity 0.4s;
            }

        .car-card:hover .car-image-wrapper::after {
            opacity: 1;
        }

        .car-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.7s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        }

        .car-card:hover img {
            transform: scale(1.2) rotate(3deg);
        }

        .card-info {
            padding: 20px;
            position: relative;
            z-index: 2;
        }

            .card-info h3 {
                font-size: 1.4rem;
                color: var(--color-secondary);
                margin: 0 0 5px;
                font-weight: 700;
                transition: color 0.3s;
            }

        .car-card:hover .card-info h3 {
            color: var(--color-accent);
        }

        .card-info p {
            color: var(--color-text-muted);
            font-size: 0.95rem;
            margin-bottom: 15px;
        }

        .price-tag {
            font-size: 1.6rem;
            font-weight: 700;
            color: var(--color-accent);
            display: inline-block;
            animation: priceGlow 2s ease-in-out infinite;
        }

        @@keyframes priceGlow {
            0%, 100% {
                text-shadow: 0 0 10px rgba(6, 182, 212, 0.3);
            }

            50% {
                text-shadow: 0 0 20px rgba(6, 182, 212, 0.6);
            }
        }

        /* ================================================= */
        /* 9. PARTNERS SECTION (Enhanced Carousel) */
        /* ================================================= */
        . /* ================================================= */
        /* ================================================= */
        /* 9. PARTNERS SECTION (Enhanced Carousel) */
        /* ================================================= */
        .partners-section {
            background: linear-gradient(135deg, var(--color-primary) 0%, #e0f2fe 100%);
            padding: 30px 0 40px 0;
            width: 100vw;
            margin-left: calc(-50vw + 50%);
            margin-right: calc(-50vw + 50%);
            margin-top: 50px;
            overflow: hidden;
            border-top: 1px solid #e5e7eb;
            position: sticky;
            top: 80px; 
            z-index: 50;
        }

            .partners-section h2 {
                color: var(--color-text-dark);
                text-align: center;
                margin-bottom: 30px;
                font-size: 2rem;
                animation: fadeInUp 1s ease-out;
                position: relative;
                z-index: 1;
            }

        .partner-track-wrapper {
            overflow: hidden;
            width: 100%;
            padding: 20px 0;
            position: relative;
        }

        .partner-track {
            display: flex;
            width: max-content;
            animation: scrollPartnersLeftToRight 40s linear infinite;
            gap: 100px;
        }

            .partner-track:hover {
                animation-play-state: paused;
            }

        .partner-logo {
            height: 70px;
            width: auto;
            filter: grayscale(100%) opacity(0.4);
            transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            flex-shrink: 0;
            position: relative;
            cursor: pointer;
        }

            .partner-logo:hover {
                filter: grayscale(0%) opacity(1);
                transform: scale(1.5) translateY(-15px);
                z-index: 100;
            }

        @@keyframes scrollPartnersLeftToRight {
            0%

        {
            transform: translateX(-50%);
        }

        100% {
            transform: translateX(0%);
        }

        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* ================================================= */
        /* 11. RESPONSIVE DESIGN */
        /* ================================================= */
        @@media (max-width: 1000px) {
            .hero {
                flex-direction: column;
                text-align: center;
                padding: 50px 0;
            }

            .hero-text {
                max-width: 100%;
            }

            .hero-image-wrapper {
                min-width: 100%;
            }

            .hero-content h1 {
                font-size: 2.8rem;
            }

            .hero-content p {
                font-size: 1.1rem;
            }
        }

        @@media (max-width: 768px) {
            .nav-links {
                display: none;
            }

            .section-header {
                font-size: 2rem;
            }

            .hero-content h1 {
                font-size: 2.2rem;
            }

            .car-grid {
                grid-template-columns: 1fr;
            }
        }

        /* ================================================= */
        /* 12. SCROLL PROGRESS BAR */
        /* ================================================= */
        .scroll-progress {
            position: fixed;
            top: 0;
            left: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--color-accent), #0ea5e9);
            z-index: 10000; /* Keep this high so it's above the car */
            transform-origin: left;
            transition: transform 0.1s ease-out;
        }
    </style>
</head>
<body>
    <!-- Scroll Progress Bar -->
    <div class="scroll-progress" id="scrollProgress"></div>

    <!-- Parallax Background -->
    <div class="parallax-bg">
        <div class="bg-layer"></div>
        <div class="floating-shape shape-1"></div>
        <div class="floating-shape shape-2"></div>
        <div class="floating-shape shape-3"></div>
    </div>

    <!-- Drifting Car Video Overlay -->
    <div class="car-video-overlay">
        <div class="drifting-car">
            <svg class="car-svg" viewBox="0 0 600 300" xmlns="http://www.w3.org/2000/svg">
                <defs>
                    <!-- Advanced Gradients -->
                    <linearGradient id="carBodyGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" style="stop-color:#00d4ff;stop-opacity:1">
                            <animate attributeName="stop-color" values="#00d4ff;#0099ff;#00d4ff" dur="3s" repeatCount="indefinite" />
                        </stop>
                        <stop offset="50%" style="stop-color:#0099ff;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#0066cc;stop-opacity:1">
                            <animate attributeName="stop-color" values="#0066cc;#004499;#0066cc" dur="3s" repeatCount="indefinite" />
                        </stop>
                    </linearGradient>

